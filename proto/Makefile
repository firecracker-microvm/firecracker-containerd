GOPATH:=$(shell go env GOPATH)

PROTO_SRC:=$(wildcard *.proto)
PROTO_GEN_SRC:=$(PROTO_SRC:.proto=.pb.go)

$(PROTO_GEN_SRC): $(PROTO_SRC)
	protoc \
		--gofast_out=plugins=grpc:. \
		-I=. \
		-I=${GOPATH}/src \
		-I=${GOPATH}/src/github.com/gogo/protobuf/protobuf \
		$^

proto: $(PROTO_GEN_SRC)
